@model IEnumerable<MinhaSacola.Models.SacolaCAB>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sacolas</h2>

<p>
    <a asp-action="Create" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Nova Sacola</a>
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataCriacao)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataCriacao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-default"><span class="glyphicon glyphicon-pencil"></span></a> |
				<a asp-controller="SacolaDETs" asp-action="Index" asp-route-id="@item.Id"class="btn btn-default"><span class="glyphicon glyphicon-eye-open"></span></a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-default"><span class="glyphicon glyphicon-trash"></span></a>
            </td>
        </tr>
}
    </tbody>
</table>
