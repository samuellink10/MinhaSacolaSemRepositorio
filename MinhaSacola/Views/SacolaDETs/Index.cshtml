@model IEnumerable<MinhaSacola.Models.SacolaDET>

@{
    ViewData["Title"] = "Itens Sacola";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <h2>Itens da Sacola</h2>

<table class="table table-striped table-bordered" >
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Produto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Produto.Descricao)
            </td>

            <td>
                <a asp-action="Delete" asp-route-id="@item.Id"class="btn btn-default"><span class="glyphicon glyphicon-trash"></span></a>
            </td>
        </tr>
}
    </tbody>
</table>

<a asp-controller="SacolaCABs" asp-action="Index">Voltar</a>
